<%- layout('layouts/boilerplate') %>


        <div class="container mt-5 mb-5 rounded-end rounded-start">
            <div class="row justify-content-center rounded-end rounded-start">
                <div class="col-md-8 rounded-end rounded-start">
                    <div class="card shadow-lg rounded-end rounded-start">
                        <div class="card-header bg-primary text-white rounded-end rounded-start">
                            <h2 class="mb-0 text-center">Create New Post</h2>
                        </div>
                        <div class="card-body p-4 rounded-end rounded-start">
                            <% if (locals.error) { %>
                                <div class="alert alert-danger">
                                    <%= locals.error %>
                                </div>
                                <% } %>

                                    <form action="/posts" method="POST" class="needs-validation" novalidate
                                        enctype="multipart/form-data">

                                        <div class="form-group mb-3">
                                            <label for="title" class="form-label">Post Title</label>
                                            <input class="form-control" type="text" name="post[title]" id="title"
                                                placeholder="Enter post title" required>
                                            <div class="invalid-feedback">Please enter a title.</div>
                                        </div>

                                        <div class="form-group mb-3">
                                            <label class="form-label" for="content">Post Content</label>
                                            <div id="editor" class="quill-editor"></div>
                                            <input type="hidden" name="post[content]" id="content" required>
                                            <div class="invalid-feedback">Please enter content for your post.</div>
                                        </div>

                                        <div class="form-group mb-3">
                                            <label class="form-label" for="image">Upload Image</label>
                                            <input class="form-control" type="file" name="post[image]" id="image"
                                                accept="image/*" required>
                                            <div class="invalid-feedback">Please upload an image.</div>
                                        </div>

                                        <div class="form-group mb-3">
                                            <label class="form-label">Select Categories:</label>
                                            <div>
                                                <!-- Category Checkboxes -->
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Technology"
                                                        id="category-technology">
                                                    <label class="form-check-label"
                                                        for="category-technology">Technology</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Lifestyle"
                                                        id="category-lifestyle">
                                                    <label class="form-check-label"
                                                        for="category-lifestyle">Lifestyle</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Education"
                                                        id="category-education">
                                                    <label class="form-check-label"
                                                        for="category-education">Education</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Entertainment"
                                                        id="category-entertainment">
                                                    <label class="form-check-label"
                                                        for="category-entertainment">Entertainment</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Travel" id="category-travel">
                                                    <label class="form-check-label" for="category-travel">Travel</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Business"
                                                        id="category-business">
                                                    <label class="form-check-label"
                                                        for="category-business">Business</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Food" id="category-food">
                                                    <label class="form-check-label" for="category-food">Food</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Gaming" id="category-gaming">
                                                    <label class="form-check-label" for="category-gaming">Gaming</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Fashion" id="category-fashion">
                                                    <label class="form-check-label"
                                                        for="category-fashion">Fashion</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Home and Garden"
                                                        id="category-home-garden">
                                                    <label class="form-check-label" for="category-home-garden">Home and
                                                        Garden</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                        name="post[categories][]" value="Other" id="category-other">
                                                    <label class="form-check-label" for="category-other">Other</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="text-center mt-4">
                                            <button class="btn btn-success" type="submit">Create Post</button>
                                        </div>
                                    </form>

                                    <div class="text-center mt-4">
                                        <a href="/posts" class="btn btn-secondary">Back to Posts</a>
                                    </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quill Editor JavaScript -->
        <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
        <script>
            const quill = new Quill('#editor', {
                theme: 'snow',
                modules: {
                    toolbar: [
                        ['bold', 'italic', 'underline'],        // toggled buttons
                        [{ 'list': 'ordered' }, { 'list': 'bullet' }] // lists
                    ]
                }
            });

            // Handle form submission
            const form = document.querySelector('form');
            form.addEventListener('submit', function () {
                const content = document.querySelector('#content');
                content.value = quill.root.innerHTML; // Save the HTML content to a hidden input
            });
        </script>