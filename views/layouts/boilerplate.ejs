        /* Custom styling for the Quill editor */
        .quill-editor {
            height: 300px; /* Set height for the editor */
        }
    </style>

    <style>
        .btn {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>

<body class="d-flex flex-column vh-100" style="font-family: 'Poppins', sans-serif !important">
    <%- include('../partials/navbar') %>
        <main class="mb-5">
            <%- include('../partials/flash') %>
            <%- body %>
        </main>

    <%- include('../partials/footer') %>
    
    
    <!-- Bootstrap core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.onload = function() {
          var buttons = document.querySelectorAll('.btn');
          buttons.forEach(function(button) {
            button.classList.add('rounded-start', 'rounded-end');
          });

          const formControls = document.querySelectorAll('.form-control')
          for(let formControl of formControls) {
            formControl.classList.add('rounded-start', 'rounded-end')
          }

          const formSelects = document.querySelectorAll('.form-select')
          for(let formSelect of formSelects) {
            formSelect.classList.add('rounded-start', 'rounded-end')
          }
          
          const cards = document.querySelectorAll('.card')
          for(let card of cards) {
            card.classList.add('rounded-start', 'rounded-end')
          }
        };
      </script>
</body>

</html>
